{
  "name": "vs-school",
  "displayName": "VS-School",
  "description": "VS Code user extension for a teaching platform",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:vs-school-sidebar",
    "onCommand:vs-school.helloWorld",
    "onCommand:vs-school.askQuestion",
    "onCommand:vs-school.refresh"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vs-school-sidebar-view",
          "title": "VS-School",
          "icon": "media/book.svg"
        }
      ]
    },
    "views": {
      "vs-school-sidebar-view": [
        {
          "type": "webview",
          "id": "vs-school-sidebar",
          "name": "VS-School",
          "icon": "media/book.svg",
          "contextualTitle": "VS-School"
        }
      ]
    },
    "commands": [
      {
        "command": "vs-school.helloWorld",
        "category": "VS-School",
        "title": "Hello World"
      },
      {
        "command": "vs-school.askQuestion",
        "category": "VS-School",
        "title": "Ask Question"
      },
      {
        "command": "vs-school.refresh",
        "category": "VS-School",
        "title": "Refresh"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup --bundleConfigAsCjs -c -w\" \"webpack --watch --config ./webpack.config.js\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/polka": "^0.5.1",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "concurrently": "^5.3.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.31.0",
    "svelte-check": "^1.1.23",
    "svelte-preprocess": "^4.6.1",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "polka": "^0.5.2"
  }
}
